<!DOCTYPE html>
<html>
  <head>
    <title>Flyapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag 'reports', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header-left">
          <img class="logo" src="/logos/logo.png">
        </div>
        <div class="header-center">
            <a href="/">TOP</a>
            <a href="#">NEWS</a>
            <a href="#">USERS</a>
            <a href="/aircrafts">AIRCRAFT</a>
        </div>
        <div class="header-right">
            <a href="#">新規登録</a>
            <a href="#" class="login">ログイン</a>
        </div>
      </div>
    </header>

    <div class="repo-wrapper">
      <div class="container">
        <div class="reports">
          <h1>Reports</h1>
            <% @reports.each do |report| %>
              <a href="<%= "/report/#{report.id}" %>">
              <div class="report">
                <img class="report" src="<%= "/images/reports/#{report.file_name}" %>">
                <div class="report-data">
                  <p class="report-contents">搭乗日 : <%= report.departure_date.year %>年<%= report.departure_date.month %>月<%= report.departure_date.day %>日</p>
                  <p class="report-contents">航空会社 : <%= @airlines.find_by(id: report.airline_id)[:cord] %></p>
                  <p class="report-contents">路線 : <%= report.starting_point %>-<%= report.arrival_point %></p>
                  <p class="report-contents">投稿者 : <%= report.user_id %> </p>
                </div>
              </div>
              </a>
            <% end %>
          <div class="clear"></div>
          <div class="btn-wrapper">
            <a href="/reports/new" class="btn signup">新規投稿</a>
          </div>
        </div>
        <%= will_paginate @reports, renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>

    <footer>
      <div class="container">
        <img src="/logos/footer_logo.png">
        <p>let's join aviation community</p>
      </div>
    </footer>
  </body>
</html>
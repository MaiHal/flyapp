<!DOCTYPE html>
<html>
  <head>
    <title>Flyapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'aircraft_detail', media: 'all', 'data-turbolinks-track': 'reload' %>
    </head>
  <body>
    <div class="photo-wrapper">
        <div class="container">
	        <div class="photo-detail">
            <h1>
              <% if @airline %>
                <%= @airline[:name] %>
              <% else %>
                <%= @aircraft.airline_name %>
              <% end %>
              の写真
            </h1>
	        	<img class="photo-detail" src="<%= "/images/aircraft/#{@aircraft.file_name}" %>">
	        	<div class="photo-detail-datas">
		            <div class="photo-detail-data">
		              <table>
		              	<tr>
			              <td class="table-style">
			              <p class="photo-content">airport</p>
                    <p class="photo-content">
                      <% if @airport %>
                        <%= @airport[:name] %> <br> <font size="2">( <%= @airport[:cord] %> )</font>
                      <% else %>
                        <%= @aircraft.airport_name %>
                      <% end %>
                    </p>
			          	  </td>
			          	  <td class="table-style">
			              <p class="photo-content">airline</p>
                    <p class="photo-content">
                      <% if @airline %>
                        <%= @airline[:name] %> <br><font size="2">( <%= @airline[:cord] %> )</font>
                      <% else %>
                        <%= @aircraft.airline_name %>
                      <% end %>
                    </p>
			          	  </td class="table-style">
			          	  <td class="table-style-right">
			          	  	<p class="photo-content">taken by</p>
		              		<p class="photo-content"><a href="<%= "/user/#{@user.id}"%>"><%= @user.name %></a>さん</p>
                      <p class="photo-content"></p>
                      <p class="photo-content"></p>
			          	  </td>
			          	  </tr>
                    <tr>
                      <td class="table-style-right">
                        <p></p>
                      </td>
                    </tr>
                    <tr>
                    <td class="table-style">
                      <p class="photo-content">spot</p>
                    <p class="photo-content">さくらの山公園</p>
                    </td>
                    <td class="table-style">
                      <p class="photo-content">type</p>
                      <p class="photo-content"><%= @aircraft.aircraft_type %></p>
                    </td>
                    <td class="table-style-right">
                      <p class="photo-content">taken date</p>
                      <p class="photo-content"><%= @aircraft.taken_at.year %>年<%= @aircraft.taken_at.month %>月<%= @aircraft.taken_at.day %>日</p>
                    </td>
                  </tr>
		              </table>
		            </div>
	        </div>
        </div>
      </div>
    </div>
  </body>
</html>
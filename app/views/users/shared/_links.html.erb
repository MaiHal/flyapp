<head>
  <title>Flyapp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <%= stylesheet_link_tag    'tops', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'tops', 'data-turbolinks-track': 'reload' %>
</head>
<%- if controller_name != 'sessions' %>
  <div class= "btn signup"><%= link_to "すでにアカウントをお持ちの方", login_path %></div><br />
  <br>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name) %><br />
  <br>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to signup_path do %>
    <div class= "btn signup">新規登録</div><br />
  <% end %>
  <br>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider) do %>
      <div class= "btn facebook"><span class="fa fa-facebook"></span>Facebookでログイン</div><br />
    <% end %>
  <% end -%>
  <br>
  <a href="#" class="btn twitter"><span class="fa fa-twitter"></span>Twitterでログイン</a>
<% end -%>

<!DOCTYPE html>
<html>
  <head>
    <title>Flyapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header-left">
          <img class="logo" src="/logos/logo.png">
        </div>
        <div class="header-center">
            <a href="/">TOP</a>
            <a href="#">NEWS</a>
            <a href="#">USERS</a>
            <a href="/aircrafts">AIRCRAFT</a>
        </div>
        <div class="header-right">
            <% if session[:user_id] == nil %>
              <a href="/sign_up">新規登録</a>
              <a href="/login" class="login">ログイン</a>
            <% else %>
              <a href="/user/<%= "#{session[:user_id]}" %>">マイページ</a>
              <%= link_to("ログアウト", "logout", {method: :post}) %>
            <% end %>
        </div>
      </div>
    </header>

    <div class="user-wrapper">
      <div class="container">
        <div class="reports">
          <h1>Log in</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <p>
              <%= f.label :email, "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </p>
            <br>
            <p>
              <%= f.label :password, "パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </p>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "パスワードとメールアドレスを記憶する" %>
              </div>
            <% end -%>
            <br>
            <div class="actions">
              <%= f.submit "ログイン" %>
            </div>
          <% end %>
          <br>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
    <footer>
      <div class="container">
        <img src="/logos/footer_logo.png">
        <p>let's join aviation community</p>
      </div>
    </footer>
  </body>
</html>